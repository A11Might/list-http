{
  "name": "list-http",
  "displayName": "List HTTP Requests",
  "description": "在侧边栏中列出.http文件中的HTTP请求并支持快速导航",
  "version": "0.0.2",
  "publisher": "kohath",
  "repository": {
    "type": "git",
    "url": "https://github.com/a11might/list-http"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "http",
    "rest",
    "request",
    "api",
    "http-client"
  ],
  "activationEvents": [
    "onView:httpRequests"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "httpRequests",
          "name": "HTTP Requests"
        }
      ]
    },
    "commands": [
      {
        "command": "list-http.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "list-http.openRequest",
        "title": "打开HTTP请求"
      }
    ],
    "configuration": {
      "title": "List HTTP Requests",
      "properties": {
        "list-http.requestDisplay.showMethod": {
          "type": "boolean",
          "default": true,
          "description": "是否在请求名称旁边显示HTTP方法 (例如 [GET])。"
        },
        "list-http.requestDisplay.methodPosition": {
          "type": "string",
          "enum": [
            "prefix",
            "suffix"
          ],
          "default": "suffix",
          "description": "HTTP方法显示在请求名称之前 ('prefix') 或之后 ('suffix')。仅当 'showMethod' 为 true 时生效。"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "eslint": "^7.27.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  },
  "license": "MIT"
}